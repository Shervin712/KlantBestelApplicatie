@page
@model KE03_INTDEV_SE_1_Base.Pages.ProductModel
@{
    ViewData["Title"] = "Onderdelen";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product.css" />
}

<div class="container-fluid mt-4">
    <div class="row">
        <aside class="col-md-3">
            <h1 class="fs-3 mb-3">Onderdelen</h1>
            <!-- Filters hier indien gewenst -->
        </aside>
        <section class="col-md-9">
            <div class="product-header">
                <div></div>
                <div class="header-product">ITEM</div>
                <div class="header-stock">CATEGORIE</div>
                <div class="header-price">OMSCHRIJVING</div>
            </div>
            @foreach (var part in Model.Parts)
            {
                <div class="product-card">
                    <img src="https://via.placeholder.com/80" alt="Item afbeelding" class="product-image" />
                    <div class="product-details">
                        <h3 class="mb-1">@part.Name</h3>
                        <p class="mb-0"><strong>Categorie:</strong> @part.Category?.Name</p>
                        <p class="mb-0"><strong>Omschrijving:</strong> @part.Description</p>
                    </div>
                    <div class="product-stock">
                        <p class="mb-0">@part.Category?.Name</p>
                    </div>
                    <div class="product-price">
                        <p class="mb-0"><strong>-</strong></p>
                    </div>
                    <div class="product-actions">
                        <a href="/Part/@part.Id" class="btn btn-primary btn-sm">Bekijk item</a>
                    </div>
                </div>
            }
        </section>
    </div>
</div>