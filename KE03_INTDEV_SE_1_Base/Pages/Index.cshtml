@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@section Styles {
    <link rel="stylesheet" href="~/css/homepage.css" />
}

<div class="container py-5">

    <!-- Top Merken -->
    <section class="top-brands mb-5">
        <h2 class="section-title">Top Merken</h2>
        <div class="row gy-4">
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand-card text-center">
                    <img src="/images/merken/merk1.png" alt="Merk 1" class="img-fluid mb-2" />
                    <div class="brand-name">Merk 1</div>
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand-card text-center">
                    <img src="/images/merken/merk2.png" alt="Merk 2" class="img-fluid mb-2" />
                    <div class="brand-name">Merk 2</div>
                </div>
            </div>
            <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                <div class="brand-card text-center">
                    <img src="/images/merken/merk3.png" alt="Merk 3" class="img-fluid mb-2" />
                    <div class="brand-name">Merk 3</div>
                </div>
            </div>
            <!-- Meer merken indien nodig -->
        </div>
    </section>

    <!-- Aanbevolen Producten -->
    <section class="recommended-products">
        <h2 class="section-title">Aanbevolen Producten</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <div class="col">
                <div class="card h-100">
                    <img src="/images/producten/prod1.jpg" class="card-img-top" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title">Product 1</h5>
                        <p class="card-text">Beschrijving van product 1.</p>
                    </div>
                    <div class="card-footer bg-transparent border-top-0">
                        <a href="#" class="btn btn-primary w-100">Bekijk</a>
                    </div>
                </div>
            </div>
            <!-- Meer producten -->
        </div>
    </section>

</div>
